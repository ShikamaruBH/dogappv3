<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="dog" type="com.example.dogapp.model.DogBreed"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailFragment"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_dog_avatar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/pawprint"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tv_dog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{dog.name}"
            android:textSize="26dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingBottom="20dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Bred for:"/>
            <TextView
                android:id="@+id/tv_bred_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.bredFor == null || dog.bredFor.isEmpty()) ? @string/no_info: dog.bredFor }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Breed group:"/>
            <TextView
                android:id="@+id/tv_breed_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.breedGroup == null ||  dog.breedGroup.isEmpty()) ?  @string/no_info:dog.breedGroup }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Life span:"/>
            <TextView
                android:id="@+id/tv_life_span"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.lifeSpan == null ||  dog.lifeSpan.isEmpty()) ?  @string/no_info:dog.lifeSpan }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Origin:"/>
            <TextView
                android:id="@+id/tv_origin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.origin == null ||  dog.origin.isEmpty()) ?  @string/no_info:dog.origin }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Temperament:"/>
            <TextView
                android:id="@+id/tv_temperament"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.temperament == null ||  dog.temperament.isEmpty()) ? @string/no_info: dog.temperament }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Height:"/>
            <TextView
                android:id="@+id/tv_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.height == null ||  dog.height.metric.isEmpty()) ? @string/no_info: dog.height.metric }"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Weight:"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-condensed"
                android:text="@{(dog.weight == null ||  dog.weight.metric.isEmpty()) ?  @string/no_info:dog.weight.metric }"/>
        </LinearLayout>
    </LinearLayout>
</layout>
